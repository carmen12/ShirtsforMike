<html>
<head>
    <title>{{ pageTitle }}</title>
    {% block stylesheets %}
        <link href="{{ asset('bundles/framework/css/style.css') }}" rel="stylesheet"  />
        <link href="{{ asset('bundles/framework/css/dropdown.css') }}" rel="stylesheet"  />
        <link href="{{ asset('http://fonts.googleapis.com/css?family=Oswald:400,700') }}" rel="stylesheet" />
        <link href="{{ asset('bundles/framework/images/img/favicon.ico') }}" rel="shortcut icon" />
    {% endblock %}
</head>
<body>
<div class="header">

    <div class="wrapper">

        <h1 class="branding-title"><a href="{{ path('mike_homepage') }}">Shirts 4 Mike</a></h1>

        <ul class="nav">
            <li class="shirts {% if (section == "shirts") %} on {% endif %}"><a href="{{ path('shirts') }}">Shirts</a></li>
            <li class="contact {% if (section == "contact") %} on {% endif %}"><a href="{{ path('contact') }}">Contact</a></li>
            <li class="search {% if (section == "search") %} on {% endif %}"><a href="{{ path('search') }}">Search</a></li>
            <li class="cart"><a target="paypal" href="https://www.paypal.com/cgi-bin/webscr?cmd=_cart&amp;business=5VQW89J9SE3LU&amp;display=1">Shopping Cart</a></li>
            <li class="register">
                <div class="dropdown">
                    {% if is_granted('ROLE_USER') %}
                        <button class="dropbtn">Hi, {{ app.user.username }}</button>
                        <div class="dropdown-content">
                            <a id="drop_link3" href="{{ path('logout') }}">Logout</a>
                        </div>
                    {% else %}
                        <button class="dropbtn">User Account</button>
                        <div class="dropdown-content">
                            <a id="drop_link1" href="{{ path('register') }}">Register</a>
                            <a id="drop_link2" href="{{ path('login') }}">Login</a>
                        </div>
                    {% endif %}
                </div>
            </li>
        </ul>

    </div>
{#{{ dump(app) }}#}
</div>
<div id="content">